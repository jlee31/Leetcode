class Solution:
    def mergeAlternately(self, word1: str, word2: str) -> str:
        res = []
        n1 = len(word1)
        n2 = len(word2)

        if n1 >= n2:
            for i in range(n2):
                res.append(str(word1[i]))
                res.append(str(word2[i]))
            res = ''.join(res)
            return res + word1[n2:]
        else:
            for i in range(n1):
                res.append(str(word1[i]))
                res.append(str(word2[i]))

            res = ''.join(res)
            return res + word2[n1:]

        
