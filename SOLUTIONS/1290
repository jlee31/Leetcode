# Definition for singly-linked list.
# class ListNode(object):
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution(object):
    def getDecimalValue(self, head):
        """
        :type head: Optional[ListNode]
        :rtype: int
        """
        dummy = ListNode()
        dummy.next = head

        length = 0
        ret = 0
        curr = dummy.next
        while curr:
            length += 1
            curr = curr.next
        curr = dummy.next

        for i in range(length - 1, -1, -1):
            ret += (2 ** i) * curr.val
            curr = curr.next

        return ret
