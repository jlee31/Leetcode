        # n = len(nums)
        # currMax = float('-inf')
        # for i in range(n - k + 1):
        #     tempSum = 0
        #     for j in range(k):
        #         tempSum += nums[i + j]
        #     avg = tempSum / k
        #     if avg > currMax:
        #         currMax = avg
