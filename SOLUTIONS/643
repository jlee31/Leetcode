class Solution:
    def findMaxAverage(self, nums: List[int], k: int) -> float:
        # sliding window
        # o(n)
        n = len(nums)
        curSum = 0
        for i in range(k):
            curSum += nums[i]
        maxAvg = curSum / k

        for i in range(k, n):
            curSum += nums[i]
            curSum -= nums[i - k]
            avg = curSum / k
            maxAvg = max(maxAvg, avg)
        return maxAvg

