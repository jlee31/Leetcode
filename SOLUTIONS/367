class Solution:
    def isPerfectSquare(self, num: int) -> bool:
        l = 0
        r = num - 1
        if num == 1: 
            return True
        while l <= r:
            m = l + (r - l) // 2
            if m ** 2 == num:
                return True
            elif m ** 2 > num:
                r = m - 1
            else:
                l = m + 1
        return False
